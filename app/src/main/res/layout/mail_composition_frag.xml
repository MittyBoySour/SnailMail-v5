<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/composition_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/composition_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="Title"/>

    <LinearLayout
        android:id="@+id/delivery_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/composition_title"
        android:orientation="horizontal">

        <!-- add spinner search for list of contacts -->
        <EditText
            android:id="@+id/composition_recipient"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Recipient"/>

        <TextView
            android:id="@+id/delivery_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Delivery Location"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_additions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delivery_details"
        android:orientation="horizontal">

        <!-- add spinner search for list of contacts -->
        <Button
            android:id="@+id/add_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Add Contact"/>

        <Button
            android:id="@+id/add_delivery_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Add Location"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/composition_middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/item_additions"
        android:layout_above="@+id/action_buttons" >

        <EditText
            android:id="@+id/composition_message"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="6"
            android:gravity="top|start"
            android:maxLines="10"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:visibility="visible"
            android:hint="Message"  />

        <com.google.android.gms.maps.MapView
            android:id="@+id/composition_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/discard_composition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="Discard"/>
        <Button
            android:id="@+id/send_composition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="Send"/>

    </LinearLayout>

</RelativeLayout>