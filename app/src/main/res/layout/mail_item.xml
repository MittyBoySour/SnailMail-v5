<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mail_sender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/meie_script"
        android:text="@string/sender"
        android:layout_marginLeft="@dimen/form_margin"
        android:layout_marginRight="@dimen/form_margin"
        android:textSize="@dimen/item_text_size" />

    <TextView
        android:id="@+id/mail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:fontFamily="@font/marck_script"
        android:lineSpacingExtra="12sp"
        android:text="@string/title"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:layout_marginLeft="@dimen/form_margin"
        android:layout_marginRight="@dimen/form_margin"
        android:textSize="@dimen/item_text_size"
        android:textStyle="bold" />

</LinearLayout>